<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">
            <LinearLayout
                android:background="@drawable/gradientbackground"
                android:layout_width="match_parent"
                android:layout_height="285dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:src="@drawable/patient"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/patientFullNameTextView"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shaoni Mukherjee"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                    <ImageButton
                        android:id="@+id/updatePatientImageButton"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/edit_patient"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/patientMobileNoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:text="+91 9874563210"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="220dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:id="@+id/patientIdTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID0001"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:paddingTop="10dp"
                            android:textColor="@color/text_field"/>

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:id="@+id/patientGenderTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:paddingTop="10dp"
                            android:textColor="@color/text_field"/>

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Viewed"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:id="@+id/patientViewedTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NID0001"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:paddingTop="10dp"
                            android:textColor="@color/text_field"/>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            android:weightSum="8">

            <GridLayout
                android:id="@+id/mainGrid"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_weight="8"
                android:layout_width="350dp"
                android:layout_height="0dp"
                android:padding="14dp"
                >

                <!-- Row 1 -->
                <!-- Column 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age"
                            android:textSize="17sp"
                            />
                        <TextView
                            android:id="@+id/patientAgeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:paddingTop="8dp"
                            android:textColor="@color/text_field"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Row 1 -->
                <!-- Column 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weight"
                            android:textSize="17sp"
                            />
                        <TextView
                            android:id="@+id/patientWeightTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85 kg"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:paddingTop="8dp"
                            android:textColor="@color/text_field"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Row 2 -->
                <!-- Column 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temp"
                            android:textSize="17sp"
                            />
                        <TextView
                            android:id="@+id/patientTempTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="98 Â°F"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:paddingTop="8dp"
                            android:textColor="@color/text_field"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Row 2 -->
                <!-- Column 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Height"
                            android:textSize="17sp"
                            />
                        <TextView
                            android:id="@+id/patientHeightTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="180 cm"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:paddingTop="8dp"
                            android:textColor="@color/text_field"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Row 3 -->
                <!-- Column 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heart Rate"
                            android:textSize="17sp"
                            />
                        <TextView
                            android:id="@+id/patientHeartRateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80 bpm"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:paddingTop="8dp"
                            android:textColor="@color/text_field"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Row 3 -->
                <!-- Column 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pressure"
                            android:textSize="17sp"
                            />
                        <TextView
                            android:id="@+id/patientPressureTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120/100 mmHg"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:paddingTop="8dp"
                            android:textColor="@color/text_field"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>