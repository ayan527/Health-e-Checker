<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:background="@drawable/logo"
        android:layout_width="match_parent"
        android:alpha="0.35"
        android:layout_height="match_parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:gravity="center">

            <TextView
                android:id="@+id/editTitleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_field"
                android:text="Update Details!"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_marginTop="35dp"
                android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:errorEnabled="true"
                app:boxBackgroundColor="#EEEDEF"
                app:hintTextColor="@color/text_field"
                >

                <EditText
                    android:id="@+id/patientIdEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Patient-Id"
                    android:ems="10"
                    android:textSize="18sp"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:errorEnabled="true"
                app:boxBackgroundColor="#EEEDEF"
                app:hintTextColor="@color/text_field"
                >

                <EditText
                    android:id="@+id/patientFullNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:ems="10"
                    android:textSize="18sp"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:errorEnabled="true"
                app:boxBackgroundColor="#EEEDEF"
                app:hintTextColor="@color/text_field"
                >

                <EditText
                    android:id="@+id/patientMobileNoEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile No"
                    android:ems="10"
                    android:textSize="18sp"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:errorEnabled="true"
                app:boxBackgroundColor="#EEEDEF"
                app:hintTextColor="@color/text_field"
                >

                <EditText
                    android:id="@+id/patientGenderEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gender"
                    android:ems="10"
                    android:textSize="18sp"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:errorEnabled="true"
                app:boxBackgroundColor="#EEEDEF"
                app:hintTextColor="@color/text_field"
                >

                <AutoCompleteTextView
                    android:id="@+id/ageACTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Age (years)"
                    android:ems="10"
                    android:textSize="18sp"
                    android:inputType="number"
                    android:drawableEnd="@drawable/ic_dropdown_icon"/>
                <!--EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Age"
                    android:ems="10"
                    android:textSize="18sp"
                    android:inputType="textEmailAddress"/-->

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:errorEnabled="true"
                app:boxBackgroundColor="#EEEDEF"
                app:hintTextColor="@color/text_field"
                >

                <AutoCompleteTextView
                    android:id="@+id/weightACTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Weight (kg)"
                    android:ems="10"
                    android:textSize="18sp"
                    android:inputType="numberDecimal"
                    android:drawableEnd="@drawable/ic_dropdown_icon"/>

                <!--EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Weight (kg)"
                    android:ems="10"
                    android:textSize="18sp"
                    android:inputType="numberDecimal"/-->

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:errorEnabled="true"
                app:boxBackgroundColor="#EEEDEF"
                app:hintTextColor="@color/text_field"
                >

                <AutoCompleteTextView
                    android:id="@+id/heightACTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Height (cm)"
                    android:ems="10"
                    android:textSize="18sp"
                    android:inputType="numberDecimal"
                    android:drawableEnd="@drawable/ic_dropdown_icon"/>

                <!--EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Height (cm)"
                    android:ems="10"
                    android:textSize="18sp"
                    android:inputType="number"/-->

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:errorEnabled="true"
                app:boxBackgroundColor="#EEEDEF"
                app:hintTextColor="@color/text_field"
                >

                <AutoCompleteTextView
                    android:id="@+id/tempACTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Temperature (°F)"
                    android:ems="10"
                    android:textSize="18sp"
                    android:inputType="numberDecimal"
                    android:drawableEnd="@drawable/ic_dropdown_icon"/>

                <!--EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Temperature (°F)"
                    android:ems="10"
                    android:textSize="18sp"
                    android:inputType="text"/-->

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:errorEnabled="true"
                app:boxBackgroundColor="#EEEDEF"
                app:hintTextColor="@color/text_field"
                >

                <AutoCompleteTextView
                    android:id="@+id/pressureACTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="BLood Pressure (mmHg)"
                    android:ems="10"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:drawableEnd="@drawable/ic_dropdown_icon"/>

                <!--EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Blood Pressure (mmHg)"
                    android:ems="10"
                    android:textSize="18sp"
                    android:inputType="text"/-->

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:errorEnabled="true"
                app:boxBackgroundColor="#EEEDEF"
                app:hintTextColor="@color/text_field"
                >

                <AutoCompleteTextView
                    android:id="@+id/heartRateACTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Heart Rate (bpm)"
                    android:ems="10"
                    android:textSize="18sp"
                    android:inputType="number"
                    android:drawableEnd="@drawable/ic_dropdown_icon"/>

                <!--EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Heart Rate (bpm)"
                    android:ems="10"
                    android:textSize="18sp"
                    android:inputType="text"/-->

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/updatePatientButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Update Patient"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_design"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>