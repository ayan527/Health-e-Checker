<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewProfileActivity"
    android:background="#c868c4c6"
    android:backgroundTintMode="screen">

    <TextView
        android:id="@+id/patientIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient ID:"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#312d2d"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/patientIdEditText"
        android:layout_width="215dp"
        android:layout_height="31dp"
        android:background="@drawable/inputboxwithborders"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/patientIdTextView"
        android:textSize="10sp"
        android:textColor="#312d2d"
        android:layout_marginStart="25dp"
        android:enabled="false"
        android:inputType="text"/>

    <TextView
        android:id="@+id/firstNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name:"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#312d2d"
        android:layout_below="@+id/patientIdEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_width="215dp"
        android:layout_height="31dp"
        android:background="@drawable/inputboxwithborders"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/firstNameTextView"
        android:textSize="10sp"
        android:textColor="#312d2d"
        android:layout_marginStart="25dp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/lastNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name:"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#312d2d"
        android:layout_below="@+id/firstNameEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="215dp"
        android:layout_height="31dp"
        android:background="@drawable/inputboxwithborders"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lastNameTextView"
        android:textSize="10sp"
        android:textColor="#312d2d"
        android:layout_marginStart="25dp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/sexTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sex:"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#312d2d"
        android:layout_below="@+id/lastNameEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"/>

    <!--<Spinner
        android:id="@+id/sexSpinner"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sexTextView"
        android:textSize="10sp"
        android:textColor="#312d2d"
        android:layout_marginStart="25dp"/> -->

    <EditText
        android:id="@+id/sexEditText"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:background="@drawable/inputboxwithborders"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sexTextView"
        android:textSize="10sp"
        android:textColor="#312d2d"
        android:layout_marginStart="25dp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/ageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#312d2d"
        android:layout_below="@+id/sexEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/ageEditText"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:background="@drawable/inputboxwithborders"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ageTextView"
        android:textSize="10sp"
        android:textColor="#312d2d"
        android:layout_marginStart="25dp"
        android:inputType="number"/>

    <TextView
        android:id="@+id/weightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight:"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#312d2d"
        android:layout_below="@+id/ageEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/weightEditText"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:background="@drawable/inputboxwithborders"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/weightTextView"
        android:textSize="10sp"
        android:textColor="#312d2d"
        android:layout_marginStart="25dp"
        android:inputType="number"/>

    <TextView
        android:id="@+id/heightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height:"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#312d2d"
        android:layout_below="@+id/weightEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/heightEditText"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:background="@drawable/inputboxwithborders"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/heightTextView"
        android:textSize="10sp"
        android:textColor="#312d2d"
        android:layout_marginStart="25dp"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/bloodPressureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Pressure:"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#312d2d"
        android:layout_below="@+id/heightEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/bloodPressureEditText"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:background="@drawable/inputboxwithborders"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bloodPressureTextView"
        android:textSize="10sp"
        android:textColor="#312d2d"
        android:layout_marginStart="25dp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/temperatureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature (Â°F):"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#312d2d"
        android:layout_below="@+id/bloodPressureEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/temperatureEditText"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:background="@drawable/inputboxwithborders"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/temperatureTextView"
        android:textSize="10sp"
        android:textColor="#312d2d"
        android:layout_marginStart="25dp"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/pulseRateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulse-Rate (bpm):"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#312d2d"
        android:layout_below="@+id/temperatureEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/pulseRateEditText"
        android:layout_width="100dp"
        android:layout_height="31dp"
        android:background="@drawable/inputboxwithborders"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pulseRateTextView"
        android:textSize="10sp"
        android:textColor="#312d2d"
        android:layout_marginStart="25dp"
        android:inputType="number"/>

    <Button
        android:id="@+id/addPatientButton"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pulseRateEditText"
        android:layout_marginTop="15dp"
        android:backgroundTint="#2598e2"
        android:layout_centerHorizontal="true"
        android:text="Add Patient Details" />

</RelativeLayout>