<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.health_e_checkerapp">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_app"
        android:label="@string/app_name"
        android:logo="@mipmap/logo_app"
        android:roundIcon="@mipmap/logo_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.HealtheCheckerApp">
        <activity android:name=".PatientActivity"></activity>
        <activity
            android:name=".ForgotPasswordActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:icon="@mipmap/logo_app"
            android:logo="@mipmap/logo_app"
            android:resizeableActivity="false"
            android:roundIcon="@mipmap/logo_app"/>
        <activity
            android:name=".NewProfileActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:icon="@mipmap/logo_app"
            android:logo="@mipmap/logo_app"
            android:resizeableActivity="false"
            android:roundIcon="@mipmap/logo_app"/>
        <activity
            android:name=".ProfileActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:icon="@mipmap/logo_app"
            android:logo="@mipmap/logo_app"
            android:resizeableActivity="false"
            android:roundIcon="@mipmap/logo_app"/>
        <activity android:name=".ScannerActivity"
            android:icon="@mipmap/logo_app"
            android:logo="@mipmap/logo_app"
            android:resizeableActivity="false"
            android:roundIcon="@mipmap/logo_app"/>
        <activity android:name=".StartActivity"
            android:icon="@mipmap/logo_app"
            android:logo="@mipmap/logo_app"
            android:resizeableActivity="false"
            android:roundIcon="@mipmap/logo_app"/>
        <activity
            android:name=".LaunchActivity"
            android:icon="@mipmap/logo_app"
            android:logo="@mipmap/logo_app"
            android:resizeableActivity="false"
            android:roundIcon="@mipmap/logo_app">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:icon="@mipmap/logo_app"
            android:logo="@mipmap/logo_app"
            android:resizeableActivity="false"
            android:roundIcon="@mipmap/logo_app"/>
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:icon="@mipmap/logo_app"
            android:logo="@mipmap/logo_app"
            android:resizeableActivity="false"
            android:roundIcon="@mipmap/logo_app"/>
        <activity
            android:name=".MainActivity"
            android:icon="@mipmap/logo_app"
            android:logo="@mipmap/logo_app"
            android:resizeableActivity="false"
            android:roundIcon="@mipmap/logo_app" />

        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="barcode" />
    </application>

</manifest>